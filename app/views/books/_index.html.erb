<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
    <tr>
      <td>
        <%= link_to user_path(book.user_id) do %>
          <%= image_tag book.user.get_profile_image(50, 50) %><br />
        <% end %>
      </td>
      <td>
        <%= link_to book.title, book_path(book.id) %>
      </td>
      <td>
        <%= book.body %>
      </td>
      <% if book.favorited_by?(current_user) %>
      <td>
        <%= link_to book_favorites_path(book), class:"text-danger", method: :delete do %>
          <i class="fas fa-heart"></i>
          <%= book.favorites.count %>
        <% end %>
      </td>
      <% else %>
      <td>
        <%= link_to book_favorites_path(book), method: :post do %>
          <i class="fas fa-heart" aria-hidden="true"></i>
          <%= book.favorites.count %>
        <% end %>
      </td>
      <% end %>
      <td>
        コメント数：<%= book.book_comments.count %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<table class= "table">
  <thead>
    <tr>
      <th>画像</th>
      <th>タイトル</th>
      <th>著者</th>
      <th>出版社</th>
    </tr>
  </thead>
  <tbody>
    <% rakuten_books.each do |rakuten_book| %>
    <tr>
      <td><%= image_tag rakuten_book.medium_image_url %></td>
      <td><%= rakuten_book.title %></td>
      <td><%= rakuten_book.author %></td>
      <td><%= rakuten_book.publisher_name %></td>
    </tr>
    <% end %>
  </tbody>
</table>