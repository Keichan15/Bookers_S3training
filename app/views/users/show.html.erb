<% content_for(:body_attributes) do %>
    data-turbolinks="false"
<% end %>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'info', user: @user %>
      <%= render 'books/book', book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user_id) do %>
                <%= image_tag book.user.get_profile_image(50, 50) %><br />
              <% end %>
            </td>
            <td>
              <%= link_to book.title, book_path(book.id) %>
            </td>
            <td>
              <%= book.body %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <div>
        <%= form_with url: user_search_path(@user), local:false, method: :get do |f| %>
          <%= f.date_field :created_at %>
          <%= f.submit '検索', class: 'btn btn-primary'%>
        <% end %>
      </div>

      <div id="search_result">
        <% if @search_book.present? %>
          <%= render 'search', search_book: @search_book %>
        <% end %>
      </div>

      <h2>投稿数の前日比・前週比</h2>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>今日の投稿数</th>
              <th>前日の投稿数</th>
              <th>前日比</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= @today_book.count %></td>
              <td><%= @yesterday_book.count %></td>
              <td>
                <% if @yesterday_book.count == 0 %>
                  0%
                <% else %>
                  <% @the_day_before = @today_book.count / @yesterday_book.count.to_f %>
                  <%= (@the_day_before * 100).round %>%
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>今週の投稿数</th>
              <th>前週の投稿数</th>
              <th>前週比</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= @this_week_book.count %></td>
              <td><%= @last_week_book.count %></td>
              <td>
                <% if @last_week_book.count == 0 %>
                  0%
                <% else %>
                  <% @the_week_before = @this_week_book.count / @last_week_book.count.to_f %> <!-- 今週 / 先週 で前週比を算出 (.to_f で小数点まで値を表示)-->
                  <%= (@the_week_before * 100).round %>% <!-- 前週比を整数値にする -->
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
        <h2>7日間分の投稿数</h2>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>6日前</th>
              <th>5日前</th>
              <th>4日前</th>
              <th>3日前</th>
              <th>2日前</th>
              <th>1日前</th>
              <th>今日</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= @six_days_ago_book.count %></td>
              <td><%= @five_days_ago_book.count %></td>
              <td><%= @four_days_ago_book.count %></td>
              <td><%= @three_days_ago_book.count %></td>
              <td><%= @two_days_ago_book.count %></td>
              <td><%= @yesterday_book.count %></td>
              <td><%= @today_book.count %></td>
            </tr>
          </tbody>
        </table>
        <canvas id="myChart"></canvas>
        <script>
        var ctx = document.getElementById('myChart');
        var myChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['6日前', '5日前', '4日前', '3日前', '2日前', '1日前', '今日'],
                datasets: [
                  {
                    label: '投稿した本の数',
                    data: [<%= @books.created_6days_ago.count %>, <%= @books.created_5days_ago.count %>, <%= @books.created_4days_ago.count %>, <%= @books.created_3days_ago.count %>, <%= @books.created_2days_ago.count %>, <%= @yesterday_book.count %>, <%= @today_book.count%>],
                    backgroundColor: 'rgba(0, 0, 0, 0)',
                    borderColor: 'rgba(0, 30, 255, 1.0)',
                    pointBackgroundColor: 'rgba(0, 30, 255, 1.0)',
                    lineTension: 0.3,
                    fill: false
                    
                  }
                ],
            },
            options: {
              scales: {
                y: {
                  min: 0,
                  max: 10
                }
              },
              plugins: {
                title: {
                  display: true,
                  text: '7日間の投稿数の比較'
                }
              }
            }
        });
        </script>
    </div>
  </div>
</div>